# @name Symlink creation with enforcement
# @description This is a bundle to create a symlink at a destination path and pointing to a source target even if a file or directory already exists.
#
# @parameter source      Source file
#Â @parameter destination Destination file
# 
# @class_prefix file_create_symlink_force
# @class_parameter destination
# This bundle will define a class file_create_symlink_force_${destination}_{kept,repaired,error,ok,reached}

bundle agent file_create_symlink_force(source, destination)
{
  vars:
      "class_prefix"      string    => canonify("file_create_symlink_force_${destination}");
      "destination_canon" string    => canonify("${destination}");

  methods:
      "wrap"              usebundle => file_create_symlink_enforce("${source}", "${destination}", "true");
      "classes"           usebundle => _classes_copy("file_create_symlink_enforce_${destination_canon}", "${class_prefix}");
      "reports"           usebundle => _logger("Symlink ${destination} targeting ${source}", "${class_prefix}");

}
